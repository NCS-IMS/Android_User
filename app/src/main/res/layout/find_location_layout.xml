<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/findLocation_guilde1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/findLocation_guilde2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/findLocation_guilde3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/findLocation_guilde4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.98"/>

        <TextView
            android:id="@+id/findDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="병원 목록"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/findLocation_guilde1"
            app:layout_constraintStart_toStartOf="@id/findLocation_guilde2"/>

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/apiLactionList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/findDialogTitle"
            app:layout_constraintStart_toStartOf="@id/findLocation_guilde2"
            app:layout_constraintEnd_toEndOf="@id/findLocation_guilde3"
            app:layout_constraintBottom_toTopOf="@id/findLocation_guilde4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
